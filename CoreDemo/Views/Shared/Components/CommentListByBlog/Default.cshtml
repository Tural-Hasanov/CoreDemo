@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">


    
    @if (Model.Count() == 0)
    {
        <h1>Bu Blogda şərh yoxdur Şərhi ilk yazan siz olun</h1>
    }
    else
    {
        <h4>Şərhlər</h4>
    }

    @foreach (var item in Model)
    {


        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>


            </div>
        </div>
    }



</div>