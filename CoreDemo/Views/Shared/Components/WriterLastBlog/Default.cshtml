@using EntityLayer.Concrete
@model List<Blog>
<div class="tech-btm">
    <h4>Yazıçının digər yazıları</h4>

    @foreach (var item in Model)
    {


        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="@item.BlogID">
                    <img src="@item.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="@item.BlogID">@item.BlogTitle</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.BlogCreateDate.ToString("hh MMM yyyy")
                    </span>
                </div>
            </div>

        </div>
    }

</div>